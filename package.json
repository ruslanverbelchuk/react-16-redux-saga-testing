{
  "name": "react-redux-saga-testing",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.+(js|css|json)\"",
    "formatJS": "prettier --write \"src/**/*.js\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.css",
    "cli:lint:css": "stylelint \"**/*.css\"",
    "cli:lint:scss": "stylelint \"**/*.scss\"",
    "cli:format:css": "stylelint --fix \"**/*.css\"",
    "cli:format:scss": "stylelint --fix \"**/*.scss\"",

    "cli:lint:css_order": "stylelint --config .stylelintrc.js src/**/*.css",

    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "devDependencies": {
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-redux-saga": "^1.1.1",
    "file-loader": "^4.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",

    "lint-staged": "^9.4.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-script": "^2.0.5",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.0"
  }
}
